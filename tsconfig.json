{
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2015",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
